<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbg1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="161dp"
        android:layout_height="22dp"
        android:layout_weight="1"
        android:text="@string/message"
        android:textColor="@color/rojo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.104" />

    <Button
        android:id="@+id/button_ir_ciclo_vida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:text="Ciclo Vida"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <Button
        android:id="@+id/button_ir_intent_explicito_con_parametros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Intent explicito con parametros"
        app:layout_constraintEnd_toEndOf="@+id/button_ir_list_view"
        app:layout_constraintTop_toBottomOf="@+id/button_ir_list_view" />

    <Button
        android:id="@+id/button_ir_recicled_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="Ir-R-view"
        app:layout_constraintEnd_toEndOf="@+id/button_ir_intent_respuesta"
        app:layout_constraintTop_toBottomOf="@+id/button_ir_intent_respuesta" />

    <Button
        android:id="@+id/button_ir_intent_respuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="Ir intent con respuesta"
        app:layout_constraintEnd_toEndOf="@+id/button_ir_intent_explicito_con_parametros"
        app:layout_constraintTop_toBottomOf="@+id/button_ir_intent_explicito_con_parametros" />

    <Button
        android:id="@+id/button_ir_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="List View"
        app:layout_constraintEnd_toEndOf="@+id/button_ir_ciclo_vida"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button_ir_ciclo_vida"
        app:layout_constraintTop_toBottomOf="@+id/button_ir_ciclo_vida" />

    <Button
        android:id="@+id/button_ir_http"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:text="Ir HTTP"
        app:layout_constraintEnd_toEndOf="@+id/button_ir_recicled_view"
        app:layout_constraintTop_toBottomOf="@+id/button_ir_recicled_view" />

</androidx.constraintlayout.widget.ConstraintLayout>