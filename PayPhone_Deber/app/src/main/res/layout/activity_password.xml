<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFAE15"
    tools:context=".Password">

    <androidx.constraintlayout.utils.widget.MockView
        android:id="@+id/mockView5"
        android:layout_width="333dp"
        android:layout_height="555dp"
        android:layout_marginBottom="40dp"
        android:foreground="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="500dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="291dp"
        android:layout_height="82dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_horizontal"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:text="Para cambiar tu contraseña, enviaremos un código a tu teléfono."
        android:textColor="#FFA748"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/mockView5"
        app:layout_constraintTop_toTopOf="@+id/mockView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="249dp"
        android:layout_marginEnd="114dp"
        android:layout_marginRight="114dp"
        android:text="Ingresa tu número de teléfono"
        android:textColor="#FFA748"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/mockView5"
        app:layout_constraintStart_toStartOf="@+id/mockView5"
        app:layout_constraintTop_toTopOf="@+id/mockView5" />

    <androidx.constraintlayout.utils.widget.MockView
        android:id="@+id/mockView6"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:foreground="#FF8D11"
        app:layout_constraintBottom_toBottomOf="@+id/circularImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circularImageView3"
        android:layout_width="91dp"
        android:layout_height="112dp"
        android:layout_marginTop="104dp"
        android:src="@drawable/logo"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="0dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#000000"
        app:civ_shadow_radius="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:background="#FF8D11"
        android:text="Version 3.3.10 (235)"
        android:textColor="#FFF7EE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="143dp"
        android:layout_marginRight="143dp"
        android:text="Ingresa tu código de país."
        android:textColor="#FFA748"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/mockView5"
        app:layout_constraintStart_toStartOf="@+id/mockView5"
        app:layout_constraintTop_toTopOf="@+id/mockView5" />

    <EditText
        android:id="@+id/txt_codPaisOlv"
        android:layout_width="92dp"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="195dp"
        android:layout_marginEnd="223dp"
        android:layout_marginRight="223dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="+593"
        app:layout_constraintEnd_toEndOf="@+id/mockView5"
        app:layout_constraintStart_toStartOf="@+id/mockView5"
        app:layout_constraintTop_toTopOf="@+id/mockView5" />

    <EditText
        android:id="@+id/txt_phoneOlv"
        android:layout_width="180dp"
        android:layout_height="43dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="285dp"
        android:layout_marginEnd="135dp"
        android:layout_marginRight="135dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/mockView5"
        app:layout_constraintStart_toStartOf="@+id/mockView5"
        app:layout_constraintTop_toTopOf="@+id/mockView5" />

    <Button
        android:id="@+id/btn_verificar"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="78dp"
        android:text="Verificar"
        app:backgroundTint="#FF8D11"
        app:layout_constraintBottom_toBottomOf="@+id/mockView5"
        app:layout_constraintEnd_toEndOf="@+id/mockView5"
        app:layout_constraintStart_toStartOf="@+id/mockView5" />

    <Button
        android:id="@+id/btn_cancelar"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="18dp"
        android:text="Cancelar"
        app:backgroundTint="#707070"
        app:layout_constraintBottom_toBottomOf="@+id/mockView5"
        app:layout_constraintEnd_toEndOf="@+id/mockView5"
        app:layout_constraintStart_toStartOf="@+id/mockView5" />
</androidx.constraintlayout.widget.ConstraintLayout>