<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFAE15"
    tools:context=".CrearContrasena">

    <androidx.constraintlayout.utils.widget.MockView
        android:id="@+id/mockView9"
        android:layout_width="333dp"
        android:layout_height="555dp"
        android:layout_marginBottom="40dp"
        android:foreground="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="500dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="165dp"
        android:text="Registra tu contraseña"
        android:textColor="#FFA748"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/mockView9"
        app:layout_constraintTop_toTopOf="@+id/mockView9" />

    <EditText
        android:id="@+id/txt_registrarContraseña2"
        android:layout_width="255dp"
        android:layout_height="43dp"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="270dp"
        android:ems="10"
        android:hint="Repetir contraseña"
        android:inputType="textPassword"
        android:textColorHint="#FFA748"
        app:layout_constraintStart_toStartOf="@+id/mockView9"
        app:layout_constraintTop_toTopOf="@+id/mockView9" />

    <Button
        android:id="@+id/btn_registrarContrasena"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="77dp"
        android:text="Registrar"
        app:backgroundTint="#FF8D11"
        app:layout_constraintBottom_toBottomOf="@+id/mockView9"
        app:layout_constraintEnd_toEndOf="@+id/mockView9" />

    <Button
        android:id="@+id/btn_cancelarRegistroContrasena"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="17dp"
        android:text="Cancelar"
        app:backgroundTint="#707070"
        app:layout_constraintBottom_toBottomOf="@+id/mockView9"
        app:layout_constraintEnd_toEndOf="@+id/mockView9" />

    <EditText
        android:id="@+id/txt_registrarContraseña"
        android:layout_width="255dp"
        android:layout_height="43dp"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="207dp"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textColorHint="#FFA748"
        app:layout_constraintStart_toStartOf="@+id/mockView9"
        app:layout_constraintTop_toTopOf="@+id/mockView9" />

    <androidx.constraintlayout.utils.widget.MockView
        android:id="@+id/mockView10"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:foreground="#FF8D11"
        app:layout_constraintBottom_toBottomOf="@+id/circularImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circularImageView5"
        android:layout_width="91dp"
        android:layout_height="112dp"
        android:layout_marginTop="104dp"
        android:src="@drawable/logo"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="0dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#000000"
        app:civ_shadow_radius="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:background="#FF8D11"
        android:text="Version 3.3.10 (235)"
        android:textColor="#FFF7EE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>