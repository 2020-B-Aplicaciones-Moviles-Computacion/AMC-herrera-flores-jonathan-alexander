<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".COrdenes">

    <Spinner
        android:id="@+id/spn_restaurantes"
        android:layout_width="225dp"
        android:layout_height="24dp"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_seleccionarRestaurantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Restaurantes"
        app:layout_constraintBottom_toTopOf="@+id/spn_restaurantes"
        app:layout_constraintStart_toStartOf="@+id/spn_restaurantes" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Agregar nuevo tipo de comida"
        app:layout_constraintStart_toStartOf="@+id/spn_restaurantes"
        app:layout_constraintTop_toBottomOf="@+id/spn_restaurantes" />

    <EditText
        android:id="@+id/et_tipoComida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/txt_tipoComida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Texto tipo de comida"
        app:layout_constraintStart_toStartOf="@+id/et_tipoComida"
        app:layout_constraintTop_toBottomOf="@+id/et_tipoComida" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Review"
        app:layout_constraintStart_toStartOf="@+id/txt_tipoComida"
        app:layout_constraintTop_toBottomOf="@+id/txt_tipoComida" />

    <EditText
        android:id="@+id/et_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/btn_addTipoComida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="@+id/et_tipoComida"
        app:layout_constraintStart_toEndOf="@+id/et_tipoComida"
        app:layout_constraintTop_toTopOf="@+id/et_tipoComida" />

    <Button
        android:id="@+id/btn_crearOrden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Crear"
        app:layout_constraintEnd_toEndOf="@+id/et_review"
        app:layout_constraintTop_toBottomOf="@+id/et_review" />
</androidx.constraintlayout.widget.ConstraintLayout>